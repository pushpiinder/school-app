model Admin {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model Student { 
  id Int @id @default(autoincrement())
  firstName String @map("first_name")
  lastName String @map("last_name")
  age Int
  gender String
  email String @unique
  teacherId Int @map("teacher_id")
  teacher Teacher @relation(fields: [teacherId], references: [id])
}

model Teacher {
  id Int @id @default(autoincrement())
  firstName String @map("first_name")
  lastName String @map("last_name")
  age Int
  gender String
  email String @unique

  students Student[]
}


